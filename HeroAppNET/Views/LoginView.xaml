<Page x:Class="HeroAppNET.Views.LoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="#F5F5F5" Height="236" Width="530">

    <Grid>
        <!-- Центрирование контента -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

            <!-- Логотип или заголовок -->
            <TextBlock Text="Вход в аккаунт" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Логин -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="6" Background="White">
                <Grid Margin="10,0">
                    <TextBox x:Name="LoginTextBox"
                             Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                             GotFocus="LoginTextBox_GotFocus"
                             LostFocus="LoginTextBox_LostFocus"
                             BorderThickness="0"
                             Padding="5,10"
                             Background="Transparent"/>
                    <TextBlock x:Name="LoginPlaceholder"
                               Text="Логин"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="7,0"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Пароль -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="6" Background="White" Margin="0,15,0,0">
                <Grid Margin="10,0">
                    <PasswordBox x:Name="PasswordBox"
                                 BorderThickness="0"
                                 Padding="5,10"
                                 Background="Transparent"/>
                    <TextBlock Text="Пароль"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="7,0"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Кнопка -->
            <Button Content="Войти"
        Foreground="White"
        FontSize="16"
        FontWeight="Bold"
        Padding="10,12"
        Margin="0,20,0,0"
        BorderThickness="0"
        Cursor="Hand"
        Click="LoginButton_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Background="#0D6EFD" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#0D6EFD"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0B5ED7"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</Page>