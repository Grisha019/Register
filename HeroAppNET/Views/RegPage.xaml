<Page x:Class="HeroAppNET.Views.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:HeroAppNET.ViewModel"
      xmlns:Services="clr-namespace:HeroAppNET.Services"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Регистрация">

    <Page.DataContext>
        <vm:RegPageViewModel />
    </Page.DataContext>

    <Grid Margin="50,50,50,19" Background="AliceBlue">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Поле Имя -->
            <TextBlock Text="Имя:" FontSize="16"/>
            <TextBox Width="250" Height="30" Margin="0,10,0,10" 
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Поле Логин -->
            <TextBlock Text="Логин:" FontSize="16"/>
            <TextBox Width="250" Height="30" Margin="0,10,0,10" 
                     Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Поле Почта -->
            <TextBlock Text="Почта:" FontSize="16"/>
            <TextBox Width="250" Height="30" Margin="0,10,0,10" 
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Поле Пароль -->
            <TextBlock Text="Пароль:" FontSize="16"/>
            <PasswordBox Width="250" Height="30" Margin="0,10,0,10"
                         Services:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}" />

            <!-- Кнопка регистрации -->
            <Button Content="Зарегистрироваться"
                    Width="150" Height="30" Margin="0,10,0,10"
                    Command="{Binding RegisterCommand}"
                    Background="#4A90E2"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="Bold"
                    HorizontalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4A90E2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Ссылка на вход -->
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="14">
                Вы уже зарегистрированы?
                <Hyperlink NavigateUri="/Views/LoginView.xaml" 
                           RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Text="Войти" Foreground="#4A90E2"/>
                </Hyperlink>
            </TextBlock>

        </StackPanel>
    </Grid>
</Page>